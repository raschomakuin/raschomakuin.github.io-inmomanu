<BaseLayout title="Alquileres Inteligentes - Servicios Inmobiliarios">
  <!-- Hero Section - Flagship Quality with 5-Layer Background - Mobile Optimized -->
  <section class="relative text-white overflow-hidden min-h-[500px] sm:min-h-[600px] lg:min-h-[650px] flex items-center">
    <!-- Layer 1: Deep Gradient Base -->
    <div class="absolute inset-0 bg-gradient-to-br from-dark-950 via-primary-950 to-dark-950"></div>
    
    <!-- Layer 2: Blueprint Pattern (Very Subtle) -->
    <div class="absolute inset-0 opacity-[0.03]">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="blueprint" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
            <path d="M 100 0 L 0 0 0 100" fill="none" stroke="white" stroke-width="0.5"/>
            <circle cx="0" cy="0" r="2" fill="white"/>
            <circle cx="100" cy="0" r="2" fill="white"/>
            <circle cx="0" cy="100" r="2" fill="white"/>
            <line x1="0" y1="50" x2="100" y2="50" stroke="white" stroke-width="0.3" stroke-dasharray="5,5"/>
            <line x1="50" y1="0" x2="50" y2="100" stroke="white" stroke-width="0.3" stroke-dasharray="5,5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#blueprint)"/>
      </svg>
    </div>

    <!-- Layer 3: Animated Film Grain Texture (Premium Feel) -->
    <div class="absolute inset-0 opacity-[0.012] mix-blend-overlay animate-grain">
      <svg class="w-full h-full">
        <filter id="noise">
          <feTurbulence type="fractalNoise" baseFrequency="0.85" numOctaves="4" stitchTiles="stitch">
            <animate attributeName="baseFrequency" values="0.85;0.88;0.85" dur="8s" repeatCount="indefinite"/>
          </feTurbulence>
        </filter>
        <rect width="100%" height="100%" filter="url(#noise)"/>
      </svg>
    </div>

    <!-- Layer 4: Radial Spotlight with Gentle Pulse -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[900px] h-[900px] bg-primary-500/20 rounded-full blur-[150px] animate-pulse-slow"></div>
    
    <!-- Layer 5: Vignette Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-dark-950/40 via-transparent to-dark-950/60"></div>
    
    <!-- Layer 6: Radial Glow Behind Headline -->
    <div class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[400px] bg-gradient-radial from-primary-400/15 via-primary-500/5 to-transparent rounded-full blur-[100px]"></div>

    <div class="container mx-auto px-4 py-16 sm:py-20 md:py-24 lg:py-28 relative z-10">
      <div class="max-w-5xl mx-auto text-center">
        <!-- Trust Badges - Pill Group with Consistent Spacing - Mobile Optimized -->
        <div class="flex flex-wrap items-center justify-center gap-2 sm:gap-3 mb-8 sm:mb-10 animate-fade-in-stagger">
          {[
            { icon: '‚≠ê', text: '4.9/5 Rating', subtext: 'From 2,450+ Reviews' },
            { icon: '‚úì', text: '50,000+ Customers', subtext: 'Nationwide Trust' },
            { icon: 'üèÜ', text: 'ISO 9001 Certified', subtext: 'Quality Guaranteed' }
