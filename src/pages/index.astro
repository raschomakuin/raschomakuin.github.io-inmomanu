        <div class="group relative bg-white dark:bg-dark-800 rounded-3xl p-8 text-center border border-gray-200 dark:border-dark-700 hover:border-transparent transition-all duration-500 ease-in-out hover:shadow-2xl hover:-translate-y-1.5 animate-on-scroll overflow-hidden" style={`animation-delay: ${i * 0.1}s;`}>
          <!-- Gradient Background on Hover -->
          <div class={`absolute inset-0 bg-gradient-to-br ${feature.color} opacity-0 group-hover:opacity-10 transition-opacity duration-500 ease-in-out`}></div>
          
