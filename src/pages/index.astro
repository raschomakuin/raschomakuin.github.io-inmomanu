        },
        { 
          icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>`,
          title: 'Easy Returns', 
          desc: 'Hassle-free 30-day policy, no questions asked',
          color: 'from-orange-500 via-orange-400 to-red-500'
        },
        { 
