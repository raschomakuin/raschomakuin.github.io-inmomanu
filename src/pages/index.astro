          <div class={`relative inline-flex items-center justify-center w-20 h-20 mb-5 rounded-2xl bg-gradient-to-br ${feature.color} text-white transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-500 ease-in-out shadow-lg group-hover:shadow-2xl animate-float-slow`}>
            <div class="transform group-hover:scale-110 transition-transform duration-500 ease-in-out" set:html={feature.icon} />
